<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.coursera.cpayanf.firstapp.WelcomeActivity">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@drawable/androidclouds"
		android:contentDescription="."
		app:layout_constraintBottom_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.0" />

	<TextView
		android:id="@+id/lblBienvenido"
		android:layout_width="@dimen/lblBienvenidoWidth"
		android:layout_height="@dimen/lblBienvenidoHeight"
		android:text="@string/lblBienvenido"
		android:textAlignment="center"
		android:textAppearance="@style/TextAppearance.AppCompat.Display2"
		android:textColor="@color/colorSkyFG"
		android:textSize="@dimen/lblBienvenidoTxSize"
		android:textStyle="bold"
		android:visibility="visible"
		app:layout_constraintBottom_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="@dimen/lblsHBias"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="@dimen/lblBienvenidoVBias" />

	<Button
		android:id="@+id/btnEntrar"
		style="@style/TransButton"
		android:layout_width="@dimen/btnEntrarWidth"
		android:layout_height="@dimen/btnEntrarHeight"
		android:text="@string/btnEntrar"
		android:visibility="visible"
		android:textSize="@dimen/btnEntrarTxSize"
		app:layout_constraintBottom_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="@dimen/lblsHBias"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="@dimen/btnEntrarVBias" />




</android.support.constraint.ConstraintLayout>
